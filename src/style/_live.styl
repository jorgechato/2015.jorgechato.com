#live
  margin-bottom 6em
  .video
    width 100%
    height 360px
    margin 0 auto
  .media-live
    max-width 1000px
    margin 0 auto
    a
      margin 0
      padding 0
      width 160px
      height 160px
      display inline-block
      vertical-align top
      color white
      transition all .5s fadeInUp
      &:ng-enter
        opacity 0
      &:ng-leave
        opacity 1
      img
        margin-top 0
        width 100%
        height 100%
      .hover-img
        width 100%
        height 100%
        position absolute
        top 0
        left 0
        transition opacity .3s ease
        background rgba(black,.3)
        opacity 0
        &:hover
          opacity 1
        &:before
          top calc(50% - 15px)
          font-size 30px
