#home
  margin-bottom 6em
  a
    color $mainColor
    font-weight 700
    &:hover
      color $blue
  .intro
    .event-data
      width 152px
      height 152px
      display inline-block
      vertical-align top
      margin 1%
      cursor pointer
      img
        width 100%
        height 100%
      .event--hover
        color white
        width 100%
        height 100%
        position absolute
        top 0
        left 0
        transition opacity .3s ease
        background rgba(black,.7)
        opacity 0
        &:hover
          opacity 1
        &.event--mobile
          opacity 1
        .event--description
          padding 0 8px
  .email
    border-bottom 1px solid $lightgrey
    ul
      margin 0
      padding 0
      li
        display inline-block
        vertical-align top
        margin 0 -2px
        padding .5em 1em
        border 1px solid $lightgrey
        margin-bottom -1px
        cursor pointer
        &.tab--active
          border-bottom 1px solid white
          border-top 2px solid $blue
          padding calc(.5em - .5px) 1em
        img
          margin 0 .5em 0 0
          padding 0
          width 25px
          height 25px
          vertical-align middle
  #post-email
    form
      width 100%
      input
        height  33px
        text-align center
        padding  3px
        margin  -2px
        border  1px solid $inputgrey
        &#post-name
          width 30%
          background $darkerwhite
          border-radius 5px 0 0 5px
        &#post-email
          width 50%
      &:focus
        border 1px solid #77B3D8
        box-shadow 0 0 7px #C8E0EF
      button
        color white
        height  33px
        width 15%
        border  1px solid $inputgrey
        border-radius 0 5px 5px 0
        margin-left -2px
    img
      height 30px
      width 30px
