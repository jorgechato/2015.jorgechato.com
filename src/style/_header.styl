header
  img
    margin-top 40px
    width 145px
    height 145px
    border-radius 50%
  nav
    margin-top 2em
    font-weight 700
    ul
      margin 0
      padding 0
      li
        display inline-block
        vertical-align top
        margin 0 1em
        a
          color $nav-color
          transition color ease .25s
          &:hover
            color $mainColor
  #github-bar
    width 100%
    height 5px
    background $mainColor
    span
      display inline-block
      vertical-align top
      height 100%
